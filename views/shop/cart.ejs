<%- include('../includes/head.ejs') %>
<body>
        <%- include('../includes/navigation.ejs') %>
        <main>
                <div class="centered">
                    <h1>Total Price: $<%= cart.totalPrice %></h1>
                </div>
                <% for(const prod of products){ %>
                    <div aria-orientation="horizontal">
                       <h1><%= prod.title %></h1>
                        <img src="<%=prod.imageUrl%>" alt="book" height="200" width="200">
                        <p><%= prod.description %></p>
                        <h2><%= cart.products[products.indexOf(prod)].qty %></h2>
                        <form action="/delete-cart-item" method="POST">
                            <input type="hidden" name="id" value="<%= prod.id %>">
                            <button class="btn" type="submit">Delete</button>
                        </form>
                    </div>
                    
                <% } %>
        </main>
        <%- include('../includes/end.ejs') %>